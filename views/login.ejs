        /* 아이디, 페스워드 */
        form .txt_field {
            position: relative;
            margin: 30px 0;
            font-size: 35px;
            color: #ffffff;

        }

        /* 인풋창 */
        .txt_field input {
            width: 100%;
            height: 64px;
            padding-left: 20px;
            font-size: 18px;
            background-color: rgba(186, 186, 186, 0.3);
            border-radius: 45px;
            border: none;
        }

        /* 인풋창 placeholder */
        .txt_field input::placeholder {
            color: #dadada;
            text-indent: 25px;
        }

        .txt_field label {
            position: absolute;
            top: 50%;
            left: 5px;
            color: #adadad;
            transform: translateY(-50%);
            font-size: 16px;
            pointer-events: none;
            transition: .5s;
        }

        .form button {
            color: white;
            width: 100%;
            height: 64px;
        }

        /* 로그인 버튼 */
        #login_bt {

            border: 1px;
            background: #FE2983;
            font-size: 18px;
            font-weight: 700;
            border-radius: 45px;
            cursor: pointer;
            outline: none;
        }

        /* 회원가입 버튼 */
        #singup_bt {
            width: 100%;
            height: 64px;
            border: 3px solid #FE2983;
            background-color: rgba(186, 186, 186, 0);
            font-size: 18px;
            font-weight: 700;
            border-radius: 45px;
            cursor: pointer;


        }

        #singup_bt a {
            text-decoration-line: none;
            color: white;
        }

