<!DOCTYPE html>
<html lang="en, ko">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>회원가입</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha384-i61gTtaoovXtAbKjo903+O55Jkn2+RtzHtvNez+yI49HAASvznhe9sZyjaSHTau9" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background: black;
            background-image: linear-gradient(to bottom, rgba(98, 23, 146, 0) 0%, rgba(92, 23, 146, 0.2) 50%, rgba(92, 23, 146, 0.4) 100%);
            height: 100vh;
        }

        /* 회원가입 바디 */
        .outline_line.signup {
            display: flex;
            justify-content: center;        
            align-items: center;
            position: absolute;
            width: 570px;
            height: 900px;
            border-radius: 60px;
            background: linear-gradient(130deg, rgba(72,230,255,0.6) 0%, rgba(83, 172, 255, 0.7) 15%, rgba(171, 125, 255, 0.7) 50%, rgba(205, 118, 255, 0.7) 70%, rgba(255,118,230,0.7) 90%, rgba(255,144,181,0.7) 100%);
            overflow: hidden;
        }

        @media (max-width : 380px) {
            .outline_line.signup {
            display: flex;
            justify-content: center;        
            align-items: center;
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 0px;
            overflow: hidden;
            
        }
        }
        @media (max-width : 700px) {
            .outline_line.signup {
            display: flex;
            justify-content: center;        
            align-items: center;
            position: absolute;
            width: 100%;
            height: 100%;
            border-radius: 0px;
            overflow: hidden;
            
        }
        }
        /* 배경이미지 돌리는 법 */
        @media (min-width : 700px) {
            .outline_line::before {
            content: "";
            position: absolute;
            width: 150%;
            height: 150%;
            z-index: -2;
           background-image: url(../static/img/bg_overay.png);
            background-position: 30% 95%;
            background-blend-mode: overlay;
            opacity: 0.5;
        }
        }

/* 
        @media (max-width : 380px) {
            .outline_line:first-child{
            background: url(../static/img/bg_overay.png)0 0 no-repeat;
            background-size: 800px 750px;
            background-position : 50% 680%;
            z-index: 1;
            background-blend-mode: overlay;
        }
        } */


        /* 회원가입 폼 */
        .center {
            /* position: absolute;
            transform: translate(-50%, -50%); */
            width: 400px;
        }
        @media (max-width : 380px) {
            .center {
            /* position: absolute;
            transform: translate(-50%, -50%); */
            width: 70%;
        }
        }
        .center h1 {
            color: white;
            text-align: center;
            font-weight: 400;
            padding: 0 0 15px 0;
            font-size: 30px;
        }


        form .txt_field {
            position: relative;
            margin: 25px 0;
        }

        /* 인풋창 */
        .txt_field input {
            width: 400px;
            height: 56px;
            padding-left: 40px;
            font-size: 18px;
            background-color: rgba(186, 186, 186, 0.3);
            border-radius: 45px;
            border: none;
        }


        @media (max-width : 380px) {
            .txt_field input {
            width: 100%;
            height: 48px;
            padding-left: 30px;
            font-size: 15px;
            background-color: rgba(186, 186, 186, 0.3);
            border-radius: 45px;
            border: none;
        }
    }

        /* 인풋창 placeholder */
        .txt_field input::placeholder {
            color: #dadada;
        }

        /* 아이디 중복확인 버튼 */
        #check_id {
            display: flex;
            justify-content: center;
            align-items: center;
        }


        .check_id {
            width: 120px;
            height: 35px;
            border: 1px;
            border-radius: 5px;
            background: #FE2983;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
        }

        @media (max-width : 380px) {
            .check_id {
            width: 80px;
            height: 30px;
            border-radius: 3px;
            background: #FE2983;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
        }
    }

        /* 회원가입 버튼 */
        #singup_bt2 {
            width: 100%;
            height: 64px;
            background-color: #FE2983;
            border: none;
            font-size: 18px;
            font-weight: 700;
            border-radius: 45px;
            cursor: pointer;
        }

        @media (max-width : 380px) {
            #singup_bt2 {
            width: 100%;
            height: 45px;
            background-color: #FE2983;
            border: none;
            font-size: 18px;
            font-weight: 700;
            border-radius: 45px;
            cursor: pointer;
        }
    }

        .form {
            padding-bottom: 20px;
        }

        /* 개인 정보 수집 동의 */
        .form-check {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-bottom: 30px;
        }

        @media (max-width : 380px) {
            .form-check {
            display: flex;
            justify-content: center;
            align-items: center;
            padding-bottom: 30px;
            font-size: 13px;
        }
    }

        .form-check label {
            margin-left: 10px;
        }

        .mb-3 {
            padding : 0 0rem;
        }
        
        @media (max-width : 400px) {
            .mb-3 {
            padding : 0 1rem;
        }
        }

    </style>
</head>

<body>
    <div class="outline_line signup">
        <div class="center">
            <h1>SIGNUP</h1>
            <form id="signup_info">
                <div class="txt_field mb-3">
                    <input type="text" class="form-control" id="check_input_id" name="id" placeholder="아이디를 입력해주세요"
                        pattern="^([a-zA-Z0-9가-힣]{3,10})$" title="대소문자, 한글, 숫자, 3글자 이상 10글자 이하" required>
                </div>
                <div class="txt_field mb-3">
                    <button type="button" style="color:white;" class="check_id" onclick="idValidity()">중복 체크</button>
                </div>
                <div class="txt_field" id="id_check_sucess" style="text-align: center; font-size: 13px;"></div>
    
                <div class="txt_field mb-3" >
                    <input type="text" class="form-control" id="check_input_name" name="name" oninput="nickValidity(this)"
                        placeholder="닉네임을 입력해주세요" title="대소문자, 숫자, 2글자 이상 10글자 이하" pattern="^([a-zA-Z0-9가-힣]{2,10})$"
                        required>
                    <div class="txt_field" id="name_check_sucess" style="text-align: center; font-size: 13px;"></div>
                </div>
                <div class="txt_field mb-3">
                    <input type="password" class="form-control" name="pw" oninput="pwValidity(this)"
                        placeholder="비밀번호를 입력해주세요" title="최소 5 자, 최소 하나의 문자, 하나의 숫자 및 하나의 특수 문자"
                        pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@!%*#?&])[A-Za-z\d@!%*#?&]{5,}$" required>
                </div>
                <div class="txt_field mb-3">
                    <input type="password" class="form-control" name="rePw" placeholder="비밀번호를 확인해주세요"
                        oninput="rePwValidity(this)" title="비밀번호가 일치하지 않습니다."
                        pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@!%*#?&])[A-Za-z\d@!%*#?&]{5,}$" required>
                </div>
                <div class="txt_field mb-3" id="pw_check_sucess" style="text-align: center; font-size: 13px;"></div>
                <div class="txt_field mb-3">
                    <input type="email" class="form-control" name="e_mail" id="check_input_mail"
                        oninput="mailValidity(this)" placeholder="이메일을 입력해주세요" title="이메일 양식에 맞게 입력해주세요" required>
                </div>
                <div class="txt_field mb-3" id="mail_check_sucess" style="text-align: center; font-size: 13px;"></div>
    
                <form class="checkbox_group mb-3">
                    <div class="form-check" style="color:white;">
                        <input class="form-check-input" type="checkbox" name="chk" id="agreeValidity" onclick="agree_check()">
                        <label class="form-check-label" for="flexCheckDefault2">
                            개인 정보 수집 이용 동의
                        </label>
                    </div>
    
                </form class="form ">
                <div class="txt_field " id="agree_check_sucess" style="text-align: center; font-size: 13px;"></div>
    
                <button type="button" class="txt_field mb-3" style="color:white; margin-bottom: 20px;" id="singup_bt2"
                    onclick="register()">회원가입</button>
        </div>
        </form>
        </div>
        <!-- 개인정보 동의 모달 -->
        <div class="modal" tabindex="-1" id="check_modal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">개인정보 수집 동의서</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>2022년 청년취업사관학교 1차 프로젝트 운영 및 관리 등을 위해 아래와 같이 개인정보를 수집 및 이용하는 내용에 대해 관계 법령에 따라 고지하오니 동의 후 등록을 진행하여 주시기 바랍니다.
                            <br>
                            1. 수집/이용 목적
                            사무국은 개인정보를 ‘2022년 청년취업사관학교 1차 프로젝트’ 운영, 참가자 관리 및 서비스 제공 등 동 행사 관련 목적 이외의 용도로는 이용하지 않으며, 이용 목적이 변경될 경우에는 동의를 받아 처리하겠습니다.
                            <br>
                            2. 수집/이용 항목
                            등록 신청 시, 참가자 확인 및 등록·관리 등 행사 운영을 위해 아래와 같은 개인정보를 수집/이용합니다.
                            - 참가자 등록·관리를 위한 이름, 이메일
                            <br>
                            3. 개인정보 보유 및 이용약관
                            수집된 개인정보는 수집일로부터 수집목적이 달성될 때까지 보유/이용되며 프로젝트 종료 후 3개월 이내에 삭제됩니다.
                            <br>
                            4. 업무 위탁에 따른 개인정보 처리
                            위 수집/이용 항목은 ‘2022년 청년취업사관학교 1차 프로젝트’의 운영팀인 KimSamPark Team에 제공하여 수집/이용 목적에 따라 사용됩니다.
                            <br>
                            5. 동의 거부 권리 및 불이익
                            개인정보/수집 이용에 따른 동의를 거부할 수 있으며, 이 경우 등록에 제한이 따릅니다.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<script>
    //회원가입 검사 목록
    var validity = {
        id: false,
        name: false,
        pw: false,
        rePw: false,
        e_mail: false,
        agree: false
    };

    function register() {
        var form = document.getElementById('signup_info');
        //배열 형식 호출 + 반복
        for (const [type, value] of Object.entries(validity)) {
            if (!value) {
                // console.log(validity);
                alert('형식에 맞지 않습니다.')
                return false;
            }
        }
        let user = {
            id: form.id.value,
            name: form.name.value,
            pw: form.pw.value,
            rePw: form.rePw.value,
            e_mail: form.e_mail.value
        }
        if (user.pw == user.rePw) {
            axios({
                method: 'post',
                url: '/signup',
                data: user
            })
                .then((response) => {
                    return response.data;
                })
                .then((data) => {
                    alert('회원가입 성공');
                    window.location.href = "/";
                });
        } else {
            alert('양식에 맞게 입력해주세요.');
        }
    }


    //아이디 유효성 검사 id
    function idValidity() {
        var form = document.getElementById('signup_info');
        if (!form.id.checkValidity()) {
            $('#id_check_sucess').html('<p style="color:red;"> 대소문자, 한글, 숫자, 3글자 이상 10글자 이하 </p>');
            return false;
        };
        $('#id_check_sucess').html('');

        axios({
            method: 'post',
            url: '/check_id',
            data: { id: form.id.value }
        })
            .then((result) => {
                console.log('아이디 중복 result : ', result);
                if (result.data) {
                    $('#id_check_sucess').html('<p style="color:red;"> 중복된 아이디 입니다.');
                } else {
                    $('#id_check_sucess').html('<p style="color:blue;">사용 가능한 아이디 입니다.');
                    validity["id"] = true;
                }
            });

    };
    //닉네임 유효성 검사 name
    function nickValidity(e) {
        if (!e.checkValidity()) {
            $('#name_check_sucess').html('<p style="color:red;"> 대소문자, 숫자, 2글자 이상 10글자 이하 </p>');
            return false;
        }
        $('#name_check_sucess').html('');

        axios({
            method: 'post',
            url: '/check_name',
            data: { name: e.value }
        })
            .then((result) => {
                if (result.data) {
                    // $('#name_check_sucess').html('<p style="color:red;"> 중복된 닉네임 입니다.');
                } else {
                    $('#name_check_sucess').html('');
                    validity["name"] = true;
                }
            });
    }

    //비밀번호 유효성 검사 pw
    function pwValidity(e) {
        if (!e.checkValidity()) {
            $('#pw_check_sucess').html('<p style="color:red;"> 최소 5 자, 최소 하나의 문자, 숫자, 특수 문자 사용 </p>');
            return false;
        };
        $('#pw_check_sucess').html('');
        validity["pw"] = true;
    };

    //비밀번호 재검사 rePw
    function rePwValidity(e) {
        $('#pw_check_sucess').html('');

        var form = document.getElementById('signup_info');
        if (form.pw.value == form.rePw.value) {
            $('#pw_check_sucess').html('<p style="color:blue;">');
            validity["rePw"] = true;
        } else {
            $('#pw_check_sucess').html('<p style="color:red;"> 비밀번호가 일치 하지 않습니다.');
        }
    }

    //e-mail 유효성 검사 e_mail
    function mailValidity(e){
        if (!e.checkValidity()) {
            $('#mail_check_sucess').html('<p style="color:red;"> 형식에 맞지 않습니다.</p>');
            return false;
        };

        $('#mail_check_sucess').html('');

        axios({
            method: 'post',
            url: '/check_mail',
            data: { e_mail: e.value }
        })
            .then((result) => {
                if (result.data) {
                    $('#mail_check_sucess').html('<p style="color:red;"> 중복된 이메일 입니다.');
                } else {
                    $('#mail_check_sucess').html('<p style="color:blue;">사용 가능한 이메일 입니다.');
                    validity["e_mail"] = true;
                };
            });
    }
    //개인정보 동의 유효성 검사


    function agree_check() {
        const check_modal = new bootstrap.Modal('#check_modal');
        if ($('#agreeValidity').is(':checked')) {

            check_modal.show();
            validity["agree"] = true;
        } else {
            check_modal.hide();
            $('#agree_check_sucess').html('<p style="color:red;"> 개인정보 동의 부탁드립니다.');
            validity["agree"] = false;
        };
    };

</script>

</html>