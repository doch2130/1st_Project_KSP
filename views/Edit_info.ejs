    <div class="outline_line Edit_info">
        <div class="center">
            <h1>회원 정보 수정</h1>
            <form id="Edit_info">
                <div class="txt_field mb-3">
                    <!-- 아이디 조회 -->
                    <input type="text" class="form-control" value="<%=data.id%>" readonly>
                </div>

                <!--닉네임 조회 -->
                <div class="txt_field mb-3">
                    <input type="text" class="form-control" id="check_input_name" name="name"
                        oninput="nickValidity(this)" placeholder="닉네임을 입력해주세요" title="대소문자, 숫자, 2글자 이상 10글자 이하"
                        pattern="^([a-zA-Z0-9가-힣]{2,10})$" value="<%=data.name%>">
                    <div class="txt_field" id="name_check_sucess" style="text-align: center; font-size: 13px;"></div>
                </div>

                <div class="txt_field mb-3">
                    <input type="password" class="form-control" name="pw" oninput="pwValidity(this)"
                        placeholder="비밀번호를 입력해주세요" title="최소 5 글자, 최소 하나의 문자, 하나의 숫자 및 하나의 특수 문자"
                        pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@!%*#?&])[A-Za-z\d@!%*#?&]{5,}$">
                </div>

                <div class="txt_field mb-3">
                    <input type="password" class="form-control" name="rePw" placeholder="비밀번호를 확인해주세요"
                        oninput="rePwValidity(this)" title="비밀번호가 일치하지 않습니다."
                        pattern="^(?=.*[A-Za-z])(?=.*\d)(?=.*[@!%*#?&])[A-Za-z\d@!%*#?&]{5,}$">
                </div>
                <div class="txt_field" id="pw_check_sucess" style="text-align: center; font-size: 13px;"></div>

                <!-- 회원 이메일 조회 -->
                <div class="txt_field mb-3">
                    <input type="text" class="form-control" value="<%=data.e_mail%>" readonly>
                </div>
