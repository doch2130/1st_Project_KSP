    <script type="text/javascript">
        AOS.init({
            duration: 1000
        });

        // 로그인 값 true => 기본 버튼 가리고 / 로그 아웃 버튼 보임
        if ("<%=result.isLogin%>" == "true") {
            $('#default-btn').addClass("d-none");
            
            $(".logout-btn").removeClass("d-none");
            $('#profile_img').removeClass("d-none");
        };

        // 로그 아웃 버튼
        function user_logout() {
            var form = document.getElementById('form_info');
            axios({
                method: 'delete',
                url: '/logout',
            })
                .then(() => {
                    alert('로그아웃 하셨습니다.');
                    window.location.href = "/";
                });
        }

        function delete_Board() {
            let user = {
                number: "<%=data.number%>"
                //form형식아닐때의 선택방식이고 프라이머리키인 number로 지정해야돼서 data.number. //그리고 여기설정한 키값인 number는 컨트롤러에서도 동일하게 하기..
            };
            
            if ( !"<%=result.isLogin%>" ) {
                alert( "로그인 하십시오" ); 
                document.location.href='/login';
            }
            axios({
                method: 'delete',
                url: '/board/delete',
                data: user
            }).then((rep) => {return rep.data;} )
            .then((data) => {
                if( data ) {
                    alert( "삭제 성공" );
                    document.location.href='/board';
                } else {
                    alert( "알 수 없는 문제가 발생했습니다." );
                }
            });
        }

    </script>
    
